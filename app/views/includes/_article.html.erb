<% unless page.no_header %>
  <header>
    <% if index %>
      <h1 class="entry-title">
          <a href="<%= @root_url %><%= post.url %>"><% if @site.titlecase %><%= titlecase(post.title)%><% else %><%= post.title %><% end %></a>
      </h1>
    <% else %>
      <h1 class="entry-title"><% if @site.titlecase %><%= titlecase(post.title)%><% else %><%= post.title %><% end %></h1>
    <% end %>
    <% unless page.meta == false %>
      <p class="meta">
        <%= render :partial => "post/date", :locals => {
            :date => page.date, 
            :data_formatted => page.data_formatted, 
            #:update => page.update,
            :updated_formatted => page.updated_formatted,
        }
            
            
        %><%= time %>
        <% if @site.disqus_short_name && post.comments != false && @site.disqus_show_comment_count == true %>
         | <a href="{% if index %}{{ root_url }}{{ post.url }}{% endif %}#disqus_thread">Comments</a>
        <% end %>
      </p>
    <% end %>
  </header>
<% end %>

<% if index %>
  <div class="entry-content">
      <%= (excerpt.blank?) ? content : excerpt %>
  </div>
  <% if excerpt.present? %>
    <footer>
      <a rel="full-article" href="{{ root_url }}{{ post.url }}">{{ site.excerpt_link }}</a>
    </footer>
  <% end %>
<% else %>
<div class="entry-content"><%= content %></div>
<% end %>
