<div class="sharing">
  <% if @site.enable_twitter_tweet_button %>
  <a href="http://twitter.com/share" class="twitter-share-button" data-url="<%= @root_url %><%= post.url %>" data-via="<%= @site.twitter_user %>" data-counturl="<%= @root_url %><%= post.url %>" >Tweet</a>
  <% end %>
  <% if @site.enable_google_plus_one %>
  <div class="g-plusone" data-size="{{ site.google_plus_one_size }}"></div>
  <% end %>
  <% if @site.enable_facebook_likes %>
  <div class="fb-like" data-send="true" data-width="450" data-show-faces="false"></div>
  <% end %>
</div>
